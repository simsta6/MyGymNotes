<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
    </style>

    <style name="headlineRoboto5Text">
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="subtitleRoboto1Text">
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="headline7Text">
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">21sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="headline6Text">
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="subtitle1Text">
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="subtitle2Text">
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="body2Text">
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="smallButtonStyle">
        <item name="tint">@color/secondaryTextColor</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/buttonshape</item>
    </style>

    <style name="transparent_btn">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/transparent_with_stroke</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
        <item name="android:paddingEnd">@dimen/medium_padding</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="numberEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/transparent_with_stroke</item>
        <item name="android:elevation">16dp</item>
        <item name="android:ems">3</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
        <item name="android:paddingEnd">@dimen/medium_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="numberEditTextDark" parent="numberEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/transparent_with_stroke_dark</item>
        <item name="android:elevation">16dp</item>
        <item name="android:ems">3</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
        <item name="android:paddingEnd">@dimen/medium_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>