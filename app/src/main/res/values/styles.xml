<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        
    </style>

    <style name="subtitle1Text">
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="body2Text">
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="smallButtonStyle">
        <item name="tint">@color/primaryTextColor</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/buttonshape</item>
    </style>

</resources>